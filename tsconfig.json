{
  "compilerOptions": {
    "declaration": true,
    "noResolve": false,
    "module": "ES2015",
    "target": "ES5",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES5", "ES2015.Iterable", "DOM", "ESNext"]
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules"]
}
